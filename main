/*  This function gets the bun type.
    Precondition: Input must be 1, 2, or 3.
    @param *nBuns: The type of bun the user wants to have. */ 
void buns(int *nBuns) 
{
	char cSpace;
	int nInval = 0;
	int nTmp = 0;
	
	do {
		if (nInval > 0) 
  	printf("Invalid Input!\n");
		printf("Enter Bun Type: ");
		scanf("%d", &*nBuns);
		scanf("%c", &cSpace);
		nInval++;
		} while ((*nBuns < 1 || *nBuns > 3) && nTmp == 0); 
}


/* This function gets the preffered patty.
   Precondition: Input must be 1, 2, or 3.
   @param *cPatty: The patty user wants to have.
   @param *nTransaction: is the whole patty transaction (which includes every step). */
void patty (char *cPatty, int *nTransaction)
{
	char cSpace;
	int nInval = 0;
	
	do{
		if (nInval > 0)        
		printf("Invalid Input\n");
		printf("Enter Pizza Size: ");
		scanf("%c", &*cPatty);
		scanf("%c", &cSpace);
		nInval++;	
		} while (*cPatty != 1 && *cPatty != 2 && *cPatty != 3); 
}
